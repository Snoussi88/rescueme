<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        tools:context=".MapsActivity"/>

    <Button
        android:layout_below="@+id/map"
        android:id="@+id/startService"
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_toRightOf="@+id/startService"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/map"
        android:text="Stop"
        android:id="@+id/stopService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_below="@+id/stopService"
        android:id="@+id/lct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_toRightOf="@+id/stopService"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/map"
        android:text="clear"
        android:id="@+id/clearMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>
