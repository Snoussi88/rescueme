<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tweetlayout"
    android:layout_width="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="9dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/Disclinearlayout"
        android:orientation="vertical"
        android:background="@drawable/elevating"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/Discprofilepic2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@color/cardview_dark_background" />

        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/Discuser2"
            android:textSize="18sp"
            android:textColor="#000"
            android:text="Khalil Snoussi"
            android:layout_toRightOf="@+id/Discprofilepic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/post_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Discuser2"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/Discprofilepic2"
            android:text="5 min ago" />

        <TextView
            android:id="@+id/Discpost_textView2"
            android:layout_below="@+id/Discprofilepic2"
            android:layout_width="wrap_content"
            android:layout_height="140dp"/>
        <LinearLayout
            android:layout_below="@+id/Discpost_textView2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <ImageView
                android:id="@+id/like"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_favorite_border_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tV_likes2"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 likes"/>

            <ImageView
                android:id="@+id/commentView"
                android:layout_marginStart="30dp"
                android:src="@drawable/ic_comment_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/commentView3"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 comments"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_share_black_24dp" />

            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"/>


        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/commentRecycler2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>





</LinearLayout>