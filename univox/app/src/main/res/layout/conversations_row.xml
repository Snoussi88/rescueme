<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootrelative"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/convlayout"
        android:layout_marginTop="5dp"
        android:background="@drawable/elevating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:id="@+id/conversation_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:src="@drawable/ic_mountain"
                android:id="@+id/conversatorpicture"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="khalil"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:id="@+id/conversationFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="last message"
                    android:layout_below="@+id/conversationFrom"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:id="@+id/lastmessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>



        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/convlayout"
        android:layout_width="match_parent"
        android:layout_height="15dp"/>








</RelativeLayout>