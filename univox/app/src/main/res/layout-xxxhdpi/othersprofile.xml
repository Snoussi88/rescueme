<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".OthersProfiles">
    <RelativeLayout
        android:background="@drawable/bubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/profile_image12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_freepik"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/name2"
            android:layout_below="@+id/profile_image12"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/user2"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:text="khalil snoussi"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/local2"
            android:layout_below="@+id/name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/locali2"
                android:text="New York, USA"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/follow_numbers2"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/local2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/followers2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/followers_text2"
                    android:text="450K"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_below="@+id/followers_text2"
                    android:textColor="@color/white"
                    android:id="@+id/followers_text_12"
                    android:text="@string/followers"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@+id/followers2"
                android:id="@+id/following2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/following_text2"
                    android:text="20K"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_below="@+id/following_text2"
                    android:textColor="@color/white"
                    android:id="@+id/following_text_12"
                    android:text="@string/following"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@+id/following2"
                android:id="@+id/helped2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/helped_text2"
                    android:text="20K"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_below="@+id/helped_text2"
                    android:textColor="@color/white"
                    android:id="@+id/helped_text_12"
                    android:text="@string/helped"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/follow_numbers2"
            android:id="@+id/buttons2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginLeft="70dp"
                android:id="@+id/follow_button2"
                android:text="@string/follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/follow_button2"
                android:text="@string/message"
                android:id="@+id/send2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/profile_header"
        android:paddingStart="15dp"
        android:paddingTop="15dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerActivity2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>







</LinearLayout>